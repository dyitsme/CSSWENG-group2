<html>
    <head>
        <link rel="stylesheet" href="../../CSS/registerStyle.css">
    </head>
    <body>
        <div id="topbar">
            <div id="redbox"></div>
            <a href="/adminhome">Files</a>
            <a href="">Profile</a>
            <h1 id="title">User Creation</h1>
        </div>
        <center>
            <form id="registerform" action="/register-post" method="POST">
            <p>{{error}}</p>
                <label for="username"></label>
                <label for="password"></label>
                <label for="role"></label>
                <input type="text" id="username" name="username" placeholder="Username" required>
                <br>
                <input type="password" id="password" name="password" placeholder="Password" required>
                <br>
                <select id="roles" name="roles" required="true">
                    <option value="" selected disabled hidden>Role</option>
                    <option value="Employee">Employee</option>
                    <option value="Manager">Manager</option>
                    <option value="Administrator">Administrator</option>
                </select>
                <br>
                <button id="registerbutton" type="submit"><span id="labelRegister">Create User</span></button>
            </form>
        </center>
    </body>
</html>